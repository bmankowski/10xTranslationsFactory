---
import Layout from "../layouts/Layout.astro";
import { supabase } from "../db/supabase";
import LogoutButton from "../components/LogoutButton.astro";

export const prerender = false;

// Check authentication
const { data } = await supabase.auth.getSession();

// If not logged in, redirect to login
if (!data.session) {
  return Astro.redirect('/auth/login?redirectTo=/profile');
}

// Get user details
const user = data.session.user;
---

<Layout title="Dashboard - 10x Translations Factory">
  <div class="container mx-auto px-4 py-10">
    <div class="flex justify-between items-center mb-8">
      <h1 class="text-3xl font-bold">Profile</h1>
      <LogoutButton />
    </div>
    
    <div class="bg-white p-6 rounded-lg shadow-md">
      <h2 class="text-xl font-semibold mb-4">Welcome, {user.email}</h2>
      <p class="text-gray-600">You are successfully logged in!</p>
      
      <div class="mt-6 p-4 bg-gray-50 rounded-md">
        <h3 class="text-lg font-medium mb-2">Your Account Details</h3>
        <ul class="space-y-2">
          <li><strong>Email:</strong> {user.email}</li>
          <li><strong>User ID:</strong> {user.id}</li>
          <li><strong>Last Sign In:</strong> {new Date(user.last_sign_in_at || '').toLocaleString()}</li>
        </ul>
      </div>
    </div>
  </div>
</Layout> 